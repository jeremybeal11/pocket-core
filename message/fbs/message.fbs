namespace fbs;

// Define message types here
// Hyperledger uses 4 types:
// Discovery, Transaction, Synchronization, and Consensus
// https://github.com/diegomasini/hyperledger-fabric/blob/master/docs/protocol-spec.md#31-message

// Pocket should have a few more types
enum MessageType:int{
  UNDEFINED = 0,
  DISCHELLO = 1,
  VALIDATE = 2,
}

table Message {
  type:MessageType;
  payload:[ubyte];
  timestamp:uint;
}

root_type Message;